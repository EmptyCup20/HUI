<div class="page-header">
    <h1 class="page-title">UIKIT-<%= data.name %></h1>
</div>
<div class="page-content" id="uikitEdit">
    <div class="row">
        <div class="col-lg-6">
            <% data.content.forEach(function(item){ %>
            <div class="panel" data-id="<%- item._id %>">
                <div class="panel-heading">
                    <h3 class="panel-title"><%= item.name %></h3>
                    <div class="panel-actions">
                        <a class="panel-action icon wb-close" data-action="close"><i class="glyphicon glyphicon-remove"></i></a>
                    </div>
                </div>
                <div class="panel-body container-fluid">
                    <img src="<%- item.img_url %>">
                </div>
            </div>
            <% }) %>
        </div>
    </div>

    <div class="fixed-action-btn">
        <a class="btn-floating" data-toggle="modal" data-target="#addUikitContentModal">
            <i class="glyphicon glyphicon-plus"></i>
        </a>
    </div>
    <div class="modal fade" id="addUikitContentModal" tabindex="-1" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title" id="myModalLabel">内容添加</h4>
                </div>
                <div class="modal-body">
                    <form class="form-horizontal" id="addUikitContentForm">
                        <input type="hidden" name="imgUrl">
                        <input type="hidden" name="attachmentUrl">
                        <div class="form-group">
                            <label class="control-label col-md-3">
                                栏目名称
                            </label>
                            <div class="col-md-8">
                                <input class="form-control" type="text" name="name">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">
                                展示图片
                            </label>
                            <div class="col-md-8">
                                <input class="form-control" type="file" name="img">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">
                                PSD附件
                            </label>
                            <div class="col-md-8">
                                <input class="form-control" type="file" name="attachment">
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
                    <button type="button" class="btn btn-primary" data-action="addContent">添加</button>
                </div>
            </div>
        </div>
    </div>
</div>