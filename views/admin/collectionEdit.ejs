<div class="page-header">
    <h1 class="page-title">编辑图标库</h1>
</div>
<div class="page-content" id="collectionEdit">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel">
                <div class="panel-heading">
                    <h3 class="panel-title">基本信息</h3>
                </div>
                <div class="panel-body container-fluid">
                    <div class="col-lg-6">
                        <form class="form-horizontal" id="collectionEditForm">
                            <div class="form-group">
                                <label class="control-label col-md-3">名称</label>
                                <div class="col-md-9">
                                    <input class="form-control" type="text" name="name" value="<%= collection.name %>">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">类型</label>
                                <div class="col-md-9">
                                    <select class="form-control" name="type" disabled="disabled">
                                        <option value="svg"
                                                <% if(collection.type == 'svg'){ %>
                                                selected="selected"
                                                <% } %>
                                        >svg
                                        </option>
                                        <option value="svg"
                                                <% if(collection.type == 'png'){ %>
                                                selected="selected"
                                                <% } %>
                                        >png
                                        </option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">附件</label>
                                <div class="col-md-9">
                                    <input class="form-control" name="attachment" id="attachmentUpload" type="file">
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="panel-heading">
                    <h3 class="panel-title">图标列表</h3>
                </div>
                <div class="panel-body container-fluid">
                    <div class="icon-list-box" id="iconListBox">
                        <% icons.forEach(function(icon){ %>
                        <div class="col-lg-1 col-md-2 col-sm-4 icon-preview-wrap" data-id="<%= icon._id %>">
                            <div class="icon-preview">
                                <img src="<%= icon.url %>">
                                <span class="icon-title"><%= icon.name %></span>
                                <div class="icon-del">
                                    <i class="glyphicon glyphicon-trash"></i>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="fixed-action-btn">
        <a class="btn-floating">
            <i class="glyphicon glyphicon-plus"></i>
            <input type="file" id="iconUpload" name="icon">
        </a>
    </div>
</div>