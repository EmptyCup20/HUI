<% include ../common/head.ejs %>
<div class="main-wrapper h-bg">
    <div class="main-top">
        <% include ../common/header.ejs %>
    </div>
    <% include ../resource/submenu.ejs %>
    <div class="h-block">
        <div class="h-container clearfix">
            <% iconTypes.forEach(function(iconType){ %>
            <div class="h-col-6">
                <a class="block-collection" href="iconfont/type/<%= iconType.id %>">
                    <h4 class="block-collection-title">
                        <span><%= iconType.name %></span>
                        <i class="total-num">20</i>
                    </h4>
                    <div class="icons-container">
                        <ul class="clearfix">
                            <% icons.forEach(function(icon, index){ %>
                            <% if(icon.collection_id == iconType.id && index < 21) { %>
                            <li>
                                <img src=<%- icon.url %> alt="">
                            </li>
                            <% } %>
                            <% }) %>
                        </ul>
                    </div>
                </a>
            </div>
            <% }) %>
        </div>
    </div>
    <% include ../common/footer.ejs %>
</div>
<% include ../common/foot.ejs %>