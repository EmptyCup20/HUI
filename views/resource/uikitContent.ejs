<% include ../common/head.ejs %>
<div class="main-wrapper">
    <div class="main-top">
        <% include ../common/header.ejs %>
    </div>
    <% include ../resource/submenu.ejs %>
    <div class="h-section  bg-lightgray">
        <!--内容部分-->
        <div class="h-container">
            <div class="h-doc-section">
                <div class="h-doc-title clearfix">
                    <div class="pull-left">
                        <h1><%= data.title %></h1>
                        <div class="h-doc-date">
                            <%= data.date %>
                        </div>
                    </div>
                    <div class="pull-right">
                        <a class="btn btn-download" href="<%= data.attachment_url %>">下载</a>
                    </div>
                </div>
                <div class="h-doc-content img-lightbox">
                    <%- data.content %>
                </div>
            </div>
        </div>
    </div>
    <% include ../common/footer.ejs %>
</div>
