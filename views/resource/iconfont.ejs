<% include ../common/head.ejs %>
<div class="h-bg">
    <div class="main-top">
        <% include ../common/header.ejs %>
    </div>
    <ul class="h-tag clearfix">
        <li><a href="/resource/uikit">UIKIT</a></li>
        <li><a class="active" href="/resource/iconfont">ICONFONT</a></li>
        <li><a href="/resource/coloricon">彩色图标</a></li>
    </ul>
    <div class="h-block">
        <div class="h-container">
            <!--内容部分-->
            <div class="clearfix">
                <input type="text" placeholder="Search..." class="search">
            </div>
        </div>
    </div>
    <div class="h-block">
        <div class="h-container clearfix">
            <% allIcon.forEach(function(value){ %>
            <% if(!value.icon.length){
                return;
            }%>
            <div class="h-col-6">
                <div class="block-collection" data-typeid="<%= value.typeId%>">
                    <h4 class="block-collection-title">
                        <span><%= value.collection %></span>
                        <i class="total-num">20</i>
                    </h4>
                    <div class="icons-container">
                        <ul class="clearfix">
                            <% value.icon.forEach(function(value,index){
                                if(index > 15){
                                    return;
                                }
                            %>
                                <li>
                                    <img src=<%- value.url %> alt="">
                                </li>
                            <% }); %>
                        </ul>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
    </div>

    <% include ../common/footer.ejs %>

</div>
<% include ../common/foot.ejs %>
<script>
    $(document).on('click','.block-collection',function(){
        window.location.href ='iconfont/detail' + '?type=' +$(this).data('typeid');
    })
</script>